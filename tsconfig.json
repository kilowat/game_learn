{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "maxNodeModuleJsDepth": 2,
    "target": "ES5",
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    },
    "lib": [
      "ES2015",
      "DOM"
    ],
  },
  "include": [
    "src/js/**/*",
    "src/icons/*"
  ],
  "exclude": [
    "node_modules",
    "esbuild.config.js"
  ]
}